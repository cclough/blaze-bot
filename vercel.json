{
  "version": 2,
  "builds": [
    {
      "src": "blaze-bot.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/stripe-webhook",
      "dest": "blaze-bot.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "blaze-bot.js"
    },
    {
      "src": "/paid.html",
      "dest": "public/paid.html"
    },
    {
      "src": "/index.html",
      "dest": "public/index.html"
    },
    {
      "src": "/.well-known/(.*)",
      "dest": "public/.well-known/$1"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
} 